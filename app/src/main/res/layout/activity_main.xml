<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <View
        android:id="@+id/player_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="120dp"
        android:layout_height="240dp"
        android:background="@drawable/card_border"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="50dp">
    </View>

    <View
        android:id="@+id/opponent_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="120dp"
        android:layout_height="240dp"
        android:background="@drawable/card_border"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="50dp">
    </View>

    <ImageView
        android:id="@+id/playerTopLeftSuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/player_card"
        app:layout_constraintTop_toTopOf="@id/player_card"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/club">
    </ImageView>

    <ImageView
        android:id="@+id/playerTopRightSuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/player_card"
        app:layout_constraintTop_toTopOf="@id/player_card"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/club">
    </ImageView>

    <ImageView
        android:id="@+id/playerBottomLeftSuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/player_card"
        app:layout_constraintBottom_toBottomOf="@id/player_card"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/club">
    </ImageView>

    <ImageView
        android:id="@+id/playerBottomRightSuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/player_card"
        app:layout_constraintBottom_toBottomOf="@id/player_card"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/club">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>